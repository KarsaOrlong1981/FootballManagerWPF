<Window x:Class="FootballManager2021.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballManager2021"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="btn" Click="btn_Click" Content="Spielerkader" Visibility="Hidden"/>
        <Button Grid.Row="1" x:Name="btnliga" Click="btnliga_Click"  Content="Liga wählen" />
        <Button Grid.Row="1" Grid.Column="1" x:Name="btnTeam" Click="btnTeam_Click" Content="Team wählen" Visibility="Hidden"/>
       
        <Button Grid.Row="3" x:Name="btnEngland" Click="btnEngland_Click"  Content="England" Visibility="Hidden"/>
       
    </Grid>
</Window>
